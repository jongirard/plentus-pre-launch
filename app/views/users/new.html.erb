<% provide(:title, 'Plentus - Beta Sign Up') %>
<main class="bs-secondaryhead" role="main">
	<div class="container secondary">
	<div class="row">
	<%= render 'layouts/messages' %>
	<div class="col-xs-12">
		<div class="logo logo-inset"></div>
		<div class="outer-box-transparent">
			<div class="inner-box">
				<div class="note">Plentus will be launching in beta soon. Sign up below to be invited by email.</div>
				<%= simple_form_for @user do |f| %>
				<form role="form">
				  <div class="form-group">
				<%= f.input :fullname, label: 'First & Last Name' %>
				</div>
				<div class="form-group">
				<%= f.input :email, label: 'Email Address' %>
				</div>
				<%= f.submit "Sign up", :class => "btn btn-submit"%>
				<% end %>
				
				</form>
			</div>
		</div>
	</div>
	</div>
	</div>
</main>