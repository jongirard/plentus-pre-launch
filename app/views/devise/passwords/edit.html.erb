<% provide(:title, 'Plentus - Reset Password') %>
<main class="bs-secondaryhead" role="main">
	<div class="container secondary">
	<div class="row">
	<div class="col-xs-12">
		<%= link_to "<div class=\"logo logo-inset\"></div>".html_safe, root_path, class: "logo logo-inset" %>
		<div class="outer-box-transparent">
			<div class="inner-box">
				<div class="note">Update your Password</div>
				<div class="note-sub"></div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :reset_password_token, :as => :hidden %>


<div class="form-group">
    <%= f.input :password, :label => false, placeholder: 'New Password', :required => true, :autofocus => true %>
</div>
<div class="form-group">
    <%= f.input :password_confirmation, :label => false, placeholder: "Retype New Password", :required => true %>
</div>



  <%= f.button :submit, "Update Password", :class => "btn btn-solid btn-lg" %>
</div>
</div>
<div class="outside-container"><%= f.full_error :reset_password_token %></div>
<% end %>
</div>
</div>
</div>
</main>
