<% provide(:title, 'Plentus - Password Reset') %>
<main class="bs-secondaryhead" role="main">
	<div class="container secondary">
	<div class="row">
	<div class="col-xs-12">
		<div class="logo logo-inset"></div>
		<div class="outer-box-transparent">
			
				<div class="note">Reset your Password</div>
				<div class="note-sub">Enter your email below and we'll send you instructions to reset your password.</div>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :label => false, placeholder: 'Email', :autofocus => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", :class => "btn btn-solid btn-lg" %>
  </div>
<% end %>
</div>

</div>
</div>
</div>
</main>
