<% provide(:title, 'Plentus - Registration') %>
<main class="bs-masthead pricing register" role="main">
<div class="top">
<div class="container upper">
<div class="row">
<div class="col-xs-12">
   <div class="description">
     <h1>14 day free trial included with all plans. Cancel anytime, no questions asked.</h1>
   </div>
</div>
</div>
</div>
</div>
<div class="bottom" id="bottom">
	<div class="container middle">
	<div class="plans register">
		<div class="plan register">
		<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		<%= hidden_field_tag 'plan', params[:plan] %>
		  	<form role="form">
			<div class="fields">
			  <div class="form-group">
			<%= f.input :fullname, label: false, placeholder: 'First & Last Name'%>
			</div>
			<div class="form-group">
			<%= f.input :email, label: false, placeholder: 'Email Address' %>
			</div>
			<div class="form-group country">
			<%= f.collection_select :country_id, Country.order(:name), :id, :name, {include_blank: false, prompt: 'Select your Country'}, {class: 'form-control'} %>
			</div>
			<div class="form-group state">
			<%= f.label :state_id, "State or Province" %><br />
			<%= f.grouped_collection_select :state_id, Country.order(:name).includes(:states), :states, :name, :id, :name, {include_blank: true}, {class: 'form-control'} %>
			</div>
			<div class="form-group password">
			<%= f.input :password, label: false, placeholder: 'Password' %>
			</div>
			</div>
			<div class="form-complete">
				<div class="terms">By clicking the button below you agree to the Terms of Service</div>
			<%= f.submit "SIGN UP FOR #{@plan.upcase} TODAY", :class => "btn btn-solid btn-lg"%>
			</div>
			<% end %>

			</form>
	</div>
	</div>
	</div>
</div>

</main>

	
				